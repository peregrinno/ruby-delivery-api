{
  "openapi": "3.0.0",
  "info": {
    "title": "Peregrinno's Delivery API | Ruby + Sinatra 游눑",
    "version": "1.0.0",
    "description": "API de Delivery para gerenciamento de clientes, produtos, ordens e autentica칞칚o feita com Ruby e Sinatra.",
    "contact": {
      "name": "Luan Araujo | Peregrinno",
      "email": "joseluan74@gmail.com",
      "url": "https://github.com/peregrinno"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4567",
      "description": "Development server"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Authorization"],
        "summary": "Autenticar cliente",
        "description": "Autentica o cliente e retorna um token JWT v치lido por 1 hora.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "johndoe@example.com" },
                  "password": { "type": "string", "example": "mypassword" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string", "example": "eyJhbGciOiJIUzI1Ni..." }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inv치lidas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Credenciais inv치lidas" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/customers": {
      "post": {
        "tags": ["Customer"],
        "summary": "Criar cliente",
        "description": "Adiciona um novo cliente ao sistema.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "John Doe" },
                  "phone": { "type": "string", "example": "123456789" },
                  "email": { "type": "string", "example": "johndoe@example.com" },
                  "password": { "type": "string", "example": "mypassword" }
                },
                "required": ["name", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente criado com sucesso"
          },
          "422": {
            "description": "Erro de valida칞칚o",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": { "type": "array", "items": { "type": "string" } }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Listar produtos",
        "description": "Retorna todos os produtos cadastrados.",
        "responses": {
          "200": {
            "description": "Lista de produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                      "name": { "type": "string", "example": "Pizza Margherita" },
                      "price": { "type": "number", "example": 30.0 }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Products"],
        "summary": "Criar produto",
        "description": "Adiciona um novo produto ao sistema.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Pizza Margherita" },
                  "price": { "type": "number", "example": 30.0 }
                },
                "required": ["name", "price"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso"
          },
          "422": {
            "description": "Erro de valida칞칚o"
          }
        }
      }
    },
    "/orders": {
      "post": {
        "tags": ["Orders"],
        "summary": "Criar ordem com detalhes",
        "description": "Cria uma nova ordem para um cliente e adiciona os detalhes da ordem.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customer_id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                  "order_details": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "product_id": { "type": "string", "example": "64a1234bc567d8e90f654321" },
                        "quantity": { "type": "integer", "example": 2 }
                      },
                      "required": ["product_id", "quantity"]
                    }
                  }
                },
                "required": ["customer_id", "order_details"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ordem criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                        "customer_id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                        "total": { "type": "number", "example": 120.0 },
                        "order_date": { "type": "string", "example": "2025-01-07T15:00:00Z" },
                        "status": { "type": "string", "example": "waiting_approval" },
                        "last_status_update": { "type": "string", "example": "2025-01-07T15:30:00Z" }
                      }
                    },
                    "order_details": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string", "example": "64a1234bc567d8e90f654321" },
                          "product_id": { "type": "string", "example": "64a1234bc567d8e90f654321" },
                          "quantity": { "type": "integer", "example": 2 },
                          "subtotal": { "type": "number", "example": 60.0 }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Erro ao criar ordem ou detalhes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Erro ao criar detalhes da ordem" },
                    "detail_errors": { "type": "array", "items": { "type": "string" } }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Orders"],
        "summary": "Listar ordens",
        "description": "Retorna todas as ordens com possibilidade de aplicar filtros opcionais.",
        "parameters": [
          {
            "name": "start_date",
            "in": "query",
            "description": "Data inicial para filtrar as ordens. Formato: YYYY-MM-DD.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-01-01"
            }
          },
          {
            "name": "end_date",
            "in": "query",
            "description": "Data final para filtrar as ordens. Formato: YYYY-MM-DD.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-01-07"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filtrar ordens pelo status.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "waiting_approval",
                "in_preparation",
                "ready",
                "in_route",
                "delivered"
              ],
              "example": "waiting_approval"
            }
          },
          {
            "name": "customer_id",
            "in": "query",
            "description": "Filtrar ordens de um cliente espec칤fico.",
            "required": false,
            "schema": {
              "type": "string",
              "example": "64a1234bc567d8e90f123456"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de ordens retornada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                      "customer_id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                      "total": { "type": "number", "example": 120.0 },
                      "order_date": { "type": "string", "example": "2025-01-07T15:00:00Z" },
                      "status": { "type": "string", "example": "waiting_approval" },
                      "last_status_update": { "type": "string", "example": "2025-01-07T15:30:00Z" }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de valida칞칚o nos filtros fornecidos.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Data inv치lida ou outro par칙metro incorreto." }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders/{id}/status": {
      "put": {
        "tags": ["Orders"],
        "summary": "Atualizar status da ordem",
        "description": "Atualiza o status da ordem especificada.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID da ordem",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["waiting_approval", "in_preparation", "ready", "in_route", "delivered"],
                    "example": "in_preparation"
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "order": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "64a1234bc567d8e90f123456" },
                        "status": { "type": "string", "example": "in_preparation" },
                        "last_status_update": { "type": "string", "example": "2025-01-07T15:45:00Z" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Transi칞칚o de status inv치lida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": { "type": "string", "example": "Transi칞칚o de status inv치lida ou ordem j치 entregue" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
